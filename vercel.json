{
    "version": 2,
    "builds": [
      { "src": "index.html", "use": "@vercel/static" },
      { "src": "style/**/*.css", "use": "@vercel/static" },
      { "src": "js/**/*.js", "use": "@vercel/static" },
      { "src": "api/*.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/style/(.*)", "dest": "/style/$1" },
      { "src": "/js/(.*)", "dest": "/js/$1" },
      { "src": "/api/main", "dest": "/api/main.py" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }